{{!-- <h1>{{lista}}</h1> --}}

<div class="wrapper">
  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <!-- Left col -->
        <div class="col-md-12">
          <!-- TABLE: LATEST ORDERS -->
          <div class="card">
            <div class="card-header border-transparent">
              <h3 class="card-title">Información de detalle</h3>

              <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                  <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove">
                  <i class="fas fa-times"></i>
                </button>
              </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body p-0">
              <div class="table-responsive">
                <table id="tabla" class="table m-0">
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th>N° Factura</th>
                      <th>ID Producto</th>
                      <th>Cantidad</th>
                      <th>Precio</th>
                      <th>Impuesto</th>
                    </tr>
                  </thead>
                  <tbody>
                    {{#each lista}}
                    <tr>
                      <td>
                        {{this.dataValues.idregistro}}
                      </td>
                      <td>
                        {{this.dataValues.NumeroFactura}}
                      </td>
                      <td>
                        {{this.dataValues.CodigoProducto}}
                      </td>
                      <td>
                        {{this.dataValues.Cantidad}}
                      </td>
                      <td>
                        {{this.dataValues.Precio}}
                      </td>
                      <td>
                        {{this.dataValues.impuesto}}
                      </td>
                      <td>
                        <a href="http://localhost:4306/app/detalle/modificar/{{this.dataValues.idregistro}}"
                          class="nav-icon fas fa-pen"></a>
                        <a onclick="return confirm('Seguro que quieres eliminar el registro ID: {{this.dataValues.idregistro}} con Numero Factura: {{this.dataValues.NumeroFactura}}?')"
                          href="http://localhost:4306/app/detalle/eliminar/{{this.dataValues.idregistro}}"
                          style="margin-left: 0.5rem;" class="nav-icon fas fa-trash"></a>
                      </td>
                    </tr>

                    {{/each}}
                  </tbody>
                </table>
              </div>
              <!-- /.table-responsive -->
            </div>
            <!-- /.card-body -->
            <div class="card-footer clearfix">
              <a href="/app/detalle/create/" class="btn btn-sm btn-info float-left">Nuevo</a>
            </div>
            <!-- /.card-footer -->
          </div>
          <!-- /.card -->
        </div>
        <!-- Fin columna izquierda -->
        <!-- Fin columna derecha -->
      </div>
      <!-- Fin primera fila -->
    </div>
  </section>