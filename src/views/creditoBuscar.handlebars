<div class="wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
          <div class="row">
            <!-- Left col -->
            <div class="col-md-12">
              <!-- TABLE: LATEST ORDERS -->
              <div class="card">
                <div class="card-header border-transparent">
                  <h3 class="card-title">Informaci√≥n de pedidos</h3>
                  <label for="formGroupExampleInput2">Buscar</label>
               <input type="number" class="form-control" placeholder="Buscar por Id" name="id" id="Activo" required>
                  <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                      <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove">
                      <i class="fas fa-times"></i>
                    </button>
                  </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body p-0">
                  <div class="table-responsive">
                    <table class="table m-0">
                      <thead>
                      <tr>                        
                        <th>ID</th>
                        <th>ID Venta</th>
                        <th>Activo</th>
                      </tr>
                      </thead>
                      <tbody>
                        {{#each lista}}
                      <tr>
                      <td>
                        {{credito.IdCredito}}
                      </td>
                      <td>
                        {{credito.IdVenta}}
                      </td>
                      <td>
                        {{credito.Activo}}
                      </td>
                      </tr>
                      {{/each}}
                      </tbody>
                    </table>
                  </div>
                  <!-- /.table-responsive -->
                </div>
                <!-- /.card-body -->
                <div class="card-footer clearfix">
                  <a href="/app/credito/create/" class="btn btn-sm btn-info float-left">Nuevo</a>
                </div>
                <!-- /.card-footer -->
              </div>
              <!-- /.card -->
            </div>
            <!-- Fin columna izquierda -->
            <!-- Fin columna derecha -->
          </div>
          <!-- Fin primera fila -->
        </div>
    </section>