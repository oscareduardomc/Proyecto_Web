<h1>Edit Detalle</h1>
<form action="http://localhost:4306/app/detalle/actualizar/{{detalle.idregistro}}" method="post"  >
    <div class="form-group col-12">
        <label>Cantidad</label>
        <input type="number" class="form-control" name="Cantidad" value="{{detalle.Cantidad}}" required class="">
    </div>
    <div class="form-group col-12">
        <label>Numero Factura</label>
        <input type="number" class="form-control" name="NumeroFactura" value="{{detalle.NumeroFactura}}"  required class="">
    </div>
    <div class="form-group col-12">
        <label>Codigo Producto</label>
        <input type="number" class="form-control" name="CodigoProducto" value="{{detalle.CodigoProducto}}"  required class="">
    </div>
    <div class="form-group col-12">
        <label>Precio</label>
        <input type="number" class="form-control" name="Precio" value="{{detalle.Precio}}"  required class="">
    </div>
    <div class="form-group col-12">
        <label>Precio Original</label>
        <input type="number" class="form-control" name="preciooriginal" value="{{detalle.preciooriginal}}"  required class="">
